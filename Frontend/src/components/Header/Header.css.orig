}

.container {
    z-index: 1;
    width: 100%;
    max-width: 1300px;
    margin-left: auto;
    margin-right: auto;
    padding-right: 50px;
    padding-left: 50px;
}

.bottom-border {
    border-bottom: 2px solid #EF7B45;
}

.navbar-logo {
    position: absolute;
    margin-left: 3em;
    color: #000000;
    justify-self: center;
    cursor: pointer;
    text-decoration: none;
    font-size: 1.7rem;
    display: flex;
    align-items: center;
    font-family: Noto Serif;
    font-style: normal;
    font-weight: bold;
    line-height: 68px;
    letter-spacing: -0.05em;
    flex: 1;
}

.nav-btn {
    display: none;
}

/* LAPTOP & MONITOR (both are the same) */
@media (min-width: 768px) {
   .nav-btn {
       display: inline;
   }

   .navbar-logo {
       justify-self: start;
   }
}

